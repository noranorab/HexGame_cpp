{
    "version": "2.28.4",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "HexGameDumpAI.c++", "-o", "hex",
                "-IC:/SDL2/include", "-LC:/SDL2/lib/x64", "-lSDL2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "includePath": [
                "${workspaceFolder}/**",
                "C:/SDL2/include" 
            ]
        }
    ]
}